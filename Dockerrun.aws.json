{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
      {
          "name": "client",
          "image": "lejarokos/multi-client",
          "hostname": "client",
          "essential": false
      },
      {
          "name": "server",
          "image": "lejarokos/multi-server",
          "hostname": "api",
          "essential": false 
      },
      {
          "name": "worker",
          "image": "lejarokos/multi-worker",
          "hostname": "worker",
          "essential": false
      },
      {
          "name": "nginx",
          "image": "lejarokos/multi-nginx",
          "hostname": "nginx",
          "essential": true,
          "portMappings":[
              {
                "hostPort": 80,
                "containerPort": 80  
              }
          ],
          "links": ["client", "server"]
      }
    ]
}
